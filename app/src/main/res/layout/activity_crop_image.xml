<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cropImage.CropImageActivity">

    <ImageView
            android:id="@+id/cropImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription,ImageContrastCheck"/>

    <Button
            android:id="@+id/cropRotationButton"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="@string/crop_rotation"
            android:textColor="@color/black"
            android:background="@color/cardview_light_background"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/cropImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/cropButton"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="@string/image_crop_library"
            android:textColor="@color/black"
            android:background="@color/cardview_light_background"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/cropRotationButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>